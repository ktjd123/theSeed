{
  "name": "backend",
  "private": true,
  "scripts": {
    "build-server": "yarn lint-server && swc server -d build",
    "run-dev-server": "yarn build-server && node build/index.js",
    "lint-server": "eslint server",
    "start": "cross-env NODE_ENV=development nodemon --watch server/ --ext ts --exec yarn run-dev-server",
    "build": "yarn pre-build && yarn build-server && next build && yarn post-build",
    "pre-build": "rm -rf build && rm -rf .next",
    "post-build": "cp -r .next build && cp -r public build && cp -r package.json build && cp yarn.lock build",
    "build-start": "NODE_ENV=production node build/index.js",
    "server-start": "NODE_ENV=production yarn node build/index.js",
    "lint": "next lint",
    "exp": "yarn dlx ts-node esbuild.ts"
  },
  "dependencies": {
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.1-rc.5",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "esbuild": "^0.14.23",
    "example-lib": "workspace:^",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "mongodb": "^4.4.0",
    "mongoose": "^6.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.133",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "17.0.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.1.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
