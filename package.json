{
  "name": "the-seed",
  "private": true,
  "scripts": {
    "build-server": "yarn lint-server && swc server -d build",
    "run-dev-server": "yarn build-server && node build/index.js",
    "lint-server": "eslint server --cache",
    "start": "cross-env NODE_ENV=development nodemon --watch server/ --ext ts --exec yarn run-dev-server",
    "build": "yarn pre-build && yarn build-server && next build && yarn post-build",
    "pre-build": "rm -rf build && rm -rf .next",
    "post-build": "cp -r .next build && cp -r public build && cp -r package.json build && cp -r .yarnrc.yml build",
    "build-start": "NODE_ENV=production node build/index.js",
    "server-start": "NODE_ENV=production yarn node build/index.js",
    "lint": "next lint"
  },
  "dependencies": {
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "mobx": "^6.3.13",
    "mobx-react": "^7.2.1",
    "mongodb": "^4.3.1",
    "mongoose": "^6.2.0",
    "morgan": "^1.10.0",
    "next": "^12.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.49.7"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.133",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "17.0.12",
    "@types/react": "17.0.38",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
